/*!uglify*/
define(function(require,exports,module){function ScrollAnimate(){this.cfg={id:"",thisShow:0,speed:300,scrollNum:3,box:"ul",boxlist:"li",theMag:10,Alllist:3,overlist:2,theway:!0,overnum:5,thebutton:!1,scrollendCallback:null}}require("jquery"),ScrollAnimate.prototype={init:function(cfg){function start(){arg.thisShow==pages?arg.scrollObj.stop(!1,!1).animate({marginLeft:-(sobjWidth-conWidth-arg.theMag)+"px"},arg.speed,function(){tempMargin=Math.abs(parseInt(arg.scrollObj.css("marginLeft")))+conWidth}):arg.scrollObj.stop(!1,!1).animate({marginLeft:-(arg.thisShow*step)+"px"},arg.speed,function(){tempMargin=Math.abs(parseInt(arg.scrollObj.css("marginLeft")))+conWidth+4}),setBtn(),null!=arg.scrollendCallback&&arg.scrollendCallback(arg.thisShow)}function setBtn(){arg.thisShow==pages?(next.hasClass(arg.ntendClass)||next.addClass(arg.ntendClass),next.hasClass(arg.ntClass)&&next.removeClass(arg.ntClass)):(next.hasClass(arg.ntClass)||next.addClass(arg.ntClass),next.hasClass(arg.ntendClass)&&next.removeClass(arg.ntendClass)),arg.thisShow>=1?(prev.hasClass(arg.peClass)||prev.addClass(arg.peClass),prev.hasClass(arg.pendClass)&&prev.removeClass(arg.pendClass)):(prev.hasClass(arg.pendClass)||prev.addClass(arg.pendClass),prev.hasClass(arg.peClass)&&prev.removeClass(arg.peClass),next.hasClass(arg.ntClass)||next.addClass(arg.ntClass),next.hasClass(arg.ntendClass)&&next.removeClass(arg.ntendClass))}function prevGo(){arg.thisShow>0&&(arg.thisShow--,start())}function nextGo(){arg.thisShow<pages&&(arg.thisShow++,start())}var $this=this;$this.cfg=$.extend($this.cfg,cfg);var arg=$this.cfg,prev=$($this.cfg.prev),next=$($this.cfg.next);arg.obj=$(arg.id),arg.scrollObj=arg.obj.find(arg.box);var onewidth=arg.scrollObj.find(arg.boxlist).eq(1).outerWidth(!0),step=arg.scrollNum*onewidth;arg.scrollList=arg.scrollObj.find(arg.boxlist);var listSize=(arg.scrollList.length-arg.Alllist,arg.scrollList.size()),sobjWidth=onewidth*listSize;arg.scrollObj.css("width",sobjWidth+"px");var pages=(listSize/arg.scrollNum,Math.ceil((listSize-arg.Alllist)/arg.scrollNum)),conWidth=arg.scrollObj.parent().width(),tempMargin=0;prev&&prev.off("click").on("click",function(e){prevGo(),e.stopPropagation()}),next&&next.off("click").on("click",function(e){nextGo(),e.stopPropagation()}),listSize<=arg.overnum?(next.hide(),prev.hide()):setBtn()}},module.exports=ScrollAnimate});